<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="projetoJPAHibernate" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>model.entidade.Produto</class>
    <class>model.entidade.Cliente</class>
    <class>model.entidade.ClienteJuridico</class>
    <class>model.entidade.Funcionario</class>
    <class>model.entidade.ItemVenda</class>
    <class>model.entidade.Venda</class>
    <class>model.entidade.Usuario</class>
    <class>model.entidade.Endereco</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/mercadinho"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="xyz132"/>
      <!--<property name="javax.persistence.schema-generation.database.action" value="create"/>-->
    </properties>
  </persistence-unit>
</persistence>
